<ul class="slides">
    @{
        List<string> imagePathes = ViewBag.GalleryImages;
        for (int i = 0; i < imagePathes.Count; i++)
        {
            string currentImage = imagePathes[i];
            int current = i + 1;
            int prev = current != 1 ? current - 1 : imagePathes.Count;
            int next = current != imagePathes.Count ? current + 1 : 1;

            <li class="slide-container">
                @if (current == 1)
                {
                    <input type="radio" name="radio-btn" id="img-@current" checked />
                }
                else
                {
                    <input type="radio" name="radio-btn" id="img-@current" />
                }
                <div>
                    <div class="slide">
                        <img src="@Url.Content(currentImage)" />
                    </div>
                    <div class="nav">
                        <label for="img-@prev" class="prev">&#x2039;</label>
                        <label for="img-@next" class="next">&#x203a;</label>
                    </div>
                </div>
            </li>
        }

        <li class="nav-dots">
            @for (int i = 0; i < imagePathes.Count; i++)
            {
                <label for="img-@(i+1)" class="nav-dot" id="img-dot-@(i+1)"></label>
            }
        </li>
    }
</ul>